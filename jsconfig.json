{
    // This file is required for VSCode to understand webpack aliases
    "compilerOptions": {
        // This must be specified if "paths" is set
        "baseUrl": ".",
        // Relative to "baseUrl"
        "paths": {
            "~/*": ["./*"]
        },
        "noLib": true,
        "experimentalDecorators": true
    },
    "exclude": ["node_modules", "out", ".next"]
}
